@model SearchViewModel
@{
    ViewBag.Title = "UPC Movie Finder";
}

<div class="jumbotron">
    <div class="row">
        <div class="col-md-12">
            <h1>@ViewBag.Title</h1>
        </div>
    </div>
</div>

@using (Html.BeginForm("Index", "Home", new { ViewBag.ReturnUrl }, FormMethod.Post, true, new {@class = "form-horizontal", role = "form"}))
{
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group">
            <div class="col-md-4">
                @Html.LabelFor(model => model.UpcId, new {htmlAttributes = new {@class = "control-label col-md-4"}})
                @Html.EditorFor(model => model.UpcId, new {htmlAttributes = new {@class = "form-control", placeholder = "12 digit UPC number required"}})
            </div>
            <div class="col-md-4">
                @Html.ValidationMessageFor(model => model.UpcId, "", new {@class = "text-danger"})
            </div>
            <div class="col-md-2">
                <a class="btn btn-default" href="@Url.Action("Result", "Home")">Search</a>
            </div>
        </div>
    </div>
}